<div class='row'>
    <div class='col-md-8'>
        <% @rooms.each do |room| %>
            <div class='col-md-6'>
                <div class='room'>
                    <p>price - favorite tag</p>
                    <%=link_to image_tag("http://placehold.it/350x250"), room_path(room) %>
                    <h1 class='roomname'><%= room.title %></h1>
                    <p>Private - 1 guest - <%= pluralize(room.reviews_count, 'views') %> - user img</p>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col-md-4">
        <% if current_user.host? %>
            <%= link_to 'Add room', new_room_path, class: 'btn btn-primary' %>
        <% end %>
    </div>
</div>
